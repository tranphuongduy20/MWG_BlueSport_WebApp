@model List<ProductModel>

<div class="listproduct listproduct-block owl-carousel">
    @{ 
    foreach (var item in @Model)
    {
        <div class="item">
            <a asp-action="Detail" asp-controller="ProductDetail" asp-route-slug="@item.slug">
                <div class="item-wrap">
                    <div class="item-label">
                        <span class="lb-percent">@item.saleOff</span>
                        <span class="lb-tragop">Góp 0%</span>
                    </div>
                    <div class="item-img">
                        <img src="~/@item.image" alt="ADIDAS Adizero Takumi Sen 7 Tokyo">
                    </div>
                </div>
                <h3><span>@item.brandName</span>  @item.name </h3>
                <div class="price">
                    <p class="price-current">@item.priceCurrent</p>
                    <p class="price-old">@item.priceOld</p>
                </div>
            </a>
        </div> 
    }}
</div>